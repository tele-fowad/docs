    {
      "group": "API Documentation",
      "pages": ["introduction", "api-reference/api-key-auth"]
    },
    {
      "group": "WhatsApp Campaign",
      "pages": [
        "api-reference/campaigns/whatsapp/intro",
        {
          "group": "Send Message",
          "pages": [
            "api-reference/campaigns/whatsapp/message-api/send-text-message",
            "api-reference/campaigns/whatsapp/message-api/send-location-message",
            "api-reference/campaigns/whatsapp/message-api/send-image-message",
            "api-reference/campaigns/whatsapp/message-api/send-document-message",
            "api-reference/campaigns/whatsapp/message-api/send-video-message",
