{
  "$schema": "https://mintlify.com/schema.json",
  "name": "Telepie Docs",
  "logo": {
    "dark": "/logo/dark.svg",
    "light": "/logo/light.svg"
  },
  "favicon": "/favicon.svg",
  "colors": {
    "primary": "#0D9373",
    "light": "#07C983",
    "dark": "#0D9373",
    "anchors": {
      "from": "#0D9373",
      "to": "#07C983"
    }
  },

  "topbar": {
    "style": "gradient"
  },

  "topbarLinks": [
    {
      "name": "Support",
      "url": "fowad@telepie.com"
    }
  ],

  "topbarCtaButton": {
    "name": "Dashboard",
    "url": "https://dashboard.mintlify.com",
    "style": "roundedRectangle"
  },

  "versions": ["v1.0"],

  "tabs": [
    {
      "name": "Example API",
      "url": "example-api",
      "openapi": "https://petstore3.swagger.io/api/v3/openapi.json"
    }
  ],

  "navigation": [
    {
      "group": "Get Started",
      "pages": ["introduction"]
    },
    {
      "group": "API Documentation",
      "pages": ["api-reference/introduction"]
    },
    {
      "group": "SMS Campaign",
      "pages": [
        "api-reference/campaigns/sms/OTP",
        "api-reference//campaigns/sms/sms-logs",
        "api-reference/campaigns/sms/send-sms-get"
      ]
    },
    {
      "group": "RCS Campaign",
      "pages": [
        "api-reference/campaigns/rcs/get-template-variables",
        "api-reference/campaigns/rcs/send-rcs-template"
      ]
    },
    {
      "group": "WhatsApp Campaign",
      "pages": [
        "api-reference/campaigns/whatsapp/get-template-list",
        "api-reference/campaigns/whatsapp/get-whatsapp-accounts",
        "api-reference/campaigns/whatsapp/send-whatsapp-message"
      ]
    },
    {
      "group": "Email Campaign",
      "pages": ["api-reference/campaigns/email/send-email"]
    }
  ],

  "api": {
    "baseUrl": "https://api.telepie.com/v1/",
    "playground": {
      "mode": "show"
    },
    "auth": {
      "method": "key",
      "name": "x-api-key"
    }
  },

  "seo": {
    "indexHiddenPages": true
  },

  "feedback": {
    "thumbsRating": true
  },

  "footerSocials": {
    "x": "https://x.com/telepie",
    "facebook": "https://www.facebook.com/telepie",
    "linkedin": "https://www.linkedin.com/company/telepietechnology/"
  }
}
