          "pages": [
            "api-reference/campaigns/whatsapp/payment-api/order-details",
            "api-reference/campaigns/whatsapp/payment-api/order-status"
          ]
        },
        {
          "group": "Catalogue API",
          "pages": [
            "api-reference/campaigns/whatsapp/catalogue-api/single-product-catalogue",
            "api-reference/campaigns/whatsapp/catalogue-api/multiproduct-catalogue"
          ]
        },
        {
          "group": "Send Templates",
          "pages": [
            "api-reference/campaigns/whatsapp/send-templates/text-template-message",
            "api-reference/campaigns/whatsapp/send-templates/media-template-message",
            "api-reference/campaigns/whatsapp/send-templates/interactive-template-message",
            "api-reference/campaigns/whatsapp/send-templates/interactive-media-template",
