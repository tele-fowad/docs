{
  "$schema": "https://mintlify.com/schema.json",
  "name": "Telepie Docs",
  "logo": {
    "dark": "/logo/dark.svg",
    "light": "/logo/light-new.svg"
  },
  "favicon": "/favicon.svg",
  "colors": {
    "primary": "#0D9373",
    "light": "#07C983",
    "dark": "#0D9373",
    "anchors": {
      "from": "#0D9373",
      "to": "#07C983"
    }
  },

  "versions": ["v1.0"],

  "topbar": {
    "style": "gradient"
  },

  "topbarLinks": [
    {
      "name": "Support",
      "url": "support@telepie.com"
    }
  ],

