    {
      "group": "RCS Campaign",
      "pages": [
        "api-reference/campaigns/rcs/get-template-variables",
        "api-reference/campaigns/rcs/send-rcs-template"
      ]
    },

    {
      "group": "Email Campaign",
      "pages": [
        "api-reference/campaigns/email/send-email",
        "api-reference/campaigns/email/upload-attachment"
      ]
    },
    {
      "group": "Webhooks",
      "pages": ["webhooks/index"]
    }
